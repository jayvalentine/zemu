require 'rake/testtask'
require 'rdoc/task'
require 'yard'

# The location of this rakefile.
HERE = __dir__

desc "Run tests"
Rake::TestTask.new do |t|
    t.test_files = FileList['test/config/test_*.rb']
end

desc "Generate documentation"
YARD::Rake::YardocTask.new :docs do |t|
    t.files = ["lib/**/*.rb"]
end
